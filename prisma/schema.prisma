generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  EMPLOYEE
  MANAGER
  DEVELOPER
  CEO
}

model users {
  id           Int       @id @default(autoincrement())
  first_name   String
  last_name    String?
  username     String    @unique
  password     String
  phone_number String?   @default("")
  role         UserRoles @default(EMPLOYEE)
  actions      Json?
  nickname     String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
}

enum ProductStatus {
  out_of_stock
  marketable
}

model product_dkp {
  product_dkp   Int           @id @unique
  product_title String
  product_price String
  product_status        ProductStatus @default(marketable)
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
}
